---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Content from '~/components/widgets/Content.astro';
import Features2 from '~/components/widgets/Features2.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import Testimonials from '~/components/widgets/Testimonials.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Portfolio - Trabajos de Grape',
  description: 'Proyectos exitosos de desarrollo web, apps móviles y sistemas a medida realizados por Grape.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <HeroText
    tagline="Portfolio"
    title="Nuestros Trabajos"
    subtitle="Explorá algunos de los proyectos más destacados que hemos desarrollado para nuestros clientes, desde startups hasta empresas consolidadas."
  />

  <!-- Filtros por Categoría -->
  <Features2
    title="Proyectos por Categoría"
    subtitle="Experiencia en múltiples industrias y tipos de soluciones"
    columns={3}
    items={[
      {
        title: 'E-commerce & Marketplaces',
        description: 'Tiendas online, plataformas de ventas y marketplaces multi-vendor.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'SaaS & Plataformas Web',
        description: 'Aplicaciones SaaS, dashboards y sistemas de gestión basados en web.',
        icon: 'tabler:cloud',
      },
      {
        title: 'Aplicaciones Móviles',
        description: 'Apps nativas e híbridas para iOS y Android.',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Sistemas Empresariales',
        description: 'ERPs, CRMs y sistemas internos de gestión para empresas.',
        icon: 'tabler:building',
      },
      {
        title: 'Landing Pages & Marketing',
        description: 'Páginas de aterrizaje optimizadas para conversión y campañas digitales.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Portales & Comunidades',
        description: 'Sitios de contenido, foros, plataformas educativas y redes sociales.',
        icon: 'tabler:users-group',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-light dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Proyecto 1: E-commerce -->
  <Content
    isReversed
    title="Tienda Online - FashionHub"
    subtitle="E-commerce de moda con +10,000 productos"
    items={[
      {
        title: 'Desafío',
        description: 'Migrar de Shopify a una solución custom para tener mayor control y reducir costos mensuales.',
        icon: 'tabler:target',
      },
      {
        title: 'Solución',
        description: 'E-commerce headless con Next.js, Stripe, y panel de administración completo.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resultados',
        description: '50% más rápido, costos reducidos en 70%, conversión aumentó 35%.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Tecnologías',
        description: 'Next.js, React, Node.js, PostgreSQL, Stripe, AWS',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1441984904996-e0b6ba687e04?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'E-commerce FashionHub',
    }}
  />

  <!-- Proyecto 2: SaaS -->
  <Content
    title="Plataforma SaaS - ProjectFlow"
    subtitle="Gestión de proyectos para equipos remotos"
    items={[
      {
        title: 'Desafío',
        description: 'Crear una alternativa más simple y económica a herramientas como Asana o Monday.',
        icon: 'tabler:target',
      },
      {
        title: 'Solución',
        description: 'SaaS multi-tenant con planes de suscripción, integraciones y real-time collaboration.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resultados',
        description: '500+ empresas usando la plataforma, 95% de retención mensual.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Tecnologías',
        description: 'React, Node.js, Socket.io, MongoDB, Redis, Docker',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2015&q=80',
      alt: 'SaaS ProjectFlow',
    }}
  />

  <!-- Proyecto 3: App Móvil -->
  <Content
    isReversed
    title="App Móvil - FitTracker"
    subtitle="Aplicación de fitness y nutrición"
    items={[
      {
        title: 'Desafío',
        description: 'App con tracking de ejercicios, dietas personalizadas y gamificación para motivar usuarios.',
        icon: 'tabler:target',
      },
      {
        title: 'Solución',
        description: 'App React Native con IA para recomendaciones, integración con wearables y comunidad.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resultados',
        description: '50,000+ descargas, 4.7★ en stores, featured en App Store.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Tecnologías',
        description: 'React Native, Python, TensorFlow, Google Cloud, Firebase',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1476480862126-209bfaa8edc8?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'App FitTracker',
    }}
  />

  <!-- Proyecto 4: Sistema para Eventos -->
  <Content
    title="Sistema de Eventos - ConferenceHub"
    subtitle="Plataforma completa para gestión de conferencias"
    items={[
      {
        title: 'Desafío',
        description: 'Gestionar inscripciones, agenda, speakers, sponsors y networking para eventos de +1000 personas.',
        icon: 'tabler:target',
      },
      {
        title: 'Solución',
        description: 'Portal web + app móvil con check-in QR, chat en vivo, y gamificación.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resultados',
        description: 'Usado en 15+ conferencias, 98% satisfacción de organizadores.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Tecnologías',
        description: 'Next.js, React Native, Node.js, PostgreSQL, Socket.io',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1540575467063-178a50c2df87?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Sistema ConferenceHub',
    }}
  />

  <!-- Proyecto 5: ERP -->
  <Content
    isReversed
    title="ERP Empresarial - ManageXpert"
    subtitle="Sistema integral de gestión para industria manufacturera"
    items={[
      {
        title: 'Desafío',
        description: 'Reemplazar múltiples sistemas legacy por una solución integrada y moderna.',
        icon: 'tabler:target',
      },
      {
        title: 'Solución',
        description: 'ERP con módulos de inventario, producción, ventas, RRHH y contabilidad.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resultados',
        description: '40% reducción en tiempos operativos, ROI en 8 meses.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Tecnologías',
        description: 'React, .NET Core, SQL Server, Azure, Power BI',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1454165804606-c3d57bc86b40?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'ERP ManageXpert',
    }}
  />

  <!-- Proyecto 6: Landing Page -->
  <Content
    title="Landing de Conversión - CryptoInvest"
    subtitle="Campaña de captación para plataforma fintech"
    items={[
      {
        title: 'Desafío',
        description: 'Generar leads calificados para nueva plataforma de inversión en cripto.',
        icon: 'tabler:target',
      },
      {
        title: 'Solución',
        description: 'Landing optimizada con storytelling, calculadora interactiva y formulario multi-paso.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Resultados',
        description: '28% tasa de conversión, 5,000+ registros en primer mes.',
        icon: 'tabler:chart-line',
      },
      {
        title: 'Tecnologías',
        description: 'Astro, Tailwind, Google Analytics, Mailchimp API',
        icon: 'tabler:code',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1551288049-bebda4e38f71?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Landing CryptoInvest',
    }}
  />

  <!-- Testimonios de Clientes -->
  <Testimonials
    title="Lo que dicen nuestros clientes"
    subtitle="Experiencias reales de empresas que confiaron en Grape"
    testimonials={[
      {
        testimonial: 'El equipo de Grape no solo entregó un producto excepcional, sino que se convirtieron en partners estratégicos de nuestro negocio. Su capacidad técnica es impresionante.',
        name: 'Lucía Fernández',
        job: 'CEO, FashionHub',
        image: {
          src: 'https://images.unsplash.com/photo-1438761681033-6461ffad8d80?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80',
          alt: 'Lucía Fernández',
        },
      },
      {
        testimonial: 'Lograron entender nuestra visión y ejecutarla mejor de lo que imaginábamos. La plataforma superó todas nuestras expectativas en funcionalidad y diseño.',
        name: 'Martín Rodríguez',
        job: 'Founder, ProjectFlow',
        image: {
          src: 'https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80',
          alt: 'Martín Rodríguez',
        },
      },
      {
        testimonial: 'Excelente comunicación, entregas en tiempo y una calidad de código que facilitó futuras expansiones. 100% recomendables.',
        name: 'Ana Gutiérrez',
        job: 'CTO, ManageXpert',
        image: {
          src: 'https://images.unsplash.com/photo-1580489944761-15a19d654956?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=1770&q=80',
          alt: 'Ana Gutiérrez',
        },
      },
    ]}
  />

  <!-- Industrias con las que trabajamos -->
  <Features2
    title="Industrias con las que Trabajamos"
    subtitle="Experiencia en múltiples sectores"
    columns={3}
    items={[
      {
        title: 'Fintech',
        description: 'Billeteras digitales, plataformas de inversión, procesadores de pago.',
        icon: 'tabler:currency-dollar',
      },
      {
        title: 'E-commerce',
        description: 'Tiendas online, marketplaces, sistemas de inventario y logística.',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'HealthTech',
        description: 'Telemedicina, gestión hospitalaria, apps de salud y wellness.',
        icon: 'tabler:heartbeat',
      },
      {
        title: 'EdTech',
        description: 'Plataformas de e-learning, LMS, gestión académica.',
        icon: 'tabler:book',
      },
      {
        title: 'Real Estate',
        description: 'Portales inmobiliarios, CRMs para inmobiliarias, tours virtuales.',
        icon: 'tabler:home',
      },
      {
        title: 'Turismo',
        description: 'Sistemas de reservas, plataformas de viajes, gestión hotelera.',
        icon: 'tabler:plane',
      },
      {
        title: 'Logística',
        description: 'Tracking de envíos, optimización de rutas, gestión de flotas.',
        icon: 'tabler:truck',
      },
      {
        title: 'Food & Delivery',
        description: 'Apps de delivery, gestión de restaurantes, sistemas de pedidos.',
        icon: 'tabler:pizza',
      },
      {
        title: 'Entretenimiento',
        description: 'Plataformas de streaming, gestión de eventos, ticketing.',
        icon: 'tabler:device-tv',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-light dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Call to Action -->
  <CallToAction
    title="¿Querés que tu proyecto sea el próximo caso de éxito?"
    subtitle="Charlemos sobre cómo podemos ayudarte a alcanzar tus objetivos de negocio con tecnología."
    actions={[
      {
        variant: 'primary',
        text: 'Solicitar Presupuesto',
        href: getPermalink('/presupuestos'),
        icon: 'tabler:rocket',
      },
      {
        variant: 'secondary',
        text: 'Conocer al Equipo',
        href: getPermalink('/quienes-somos'),
      },
    ]}
  />
</Layout>
