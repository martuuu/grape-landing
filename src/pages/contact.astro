---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import ContactUs from '~/components/widgets/Contact.astro';
import Features2 from '~/components/widgets/Features2.astro';

const metadata = {
  title: 'Contacto - Hablemos de tu proyecto',
  description: 'Contacta con COMMIT para desarrollar tu aplicación web o móvil. Respuesta en 24 horas. Presupuesto gratuito y sin compromiso.',
  canonical: 'https://commit.agency/contact',
  openGraph: {
    title: 'Contacto | COMMIT',
    description: 'Cuéntanos tu proyecto. Te respondemos en 24 horas con un presupuesto personalizado.',
    type: 'website',
  },
};
---

<Layout metadata={metadata}>
  <!-- HeroText Widget ******************* -->

  <HeroText 
    tagline="Contacto" 
    title="¡Hablemos de tu proyecto!" 
    subtitle="Transformamos ideas en soluciones digitales. Cuéntanos qué necesitas y te responderemos en menos de 24 horas."
  />

  <ContactUs
    id="form"
    title="Envíanos un mensaje"
    subtitle="¿Tienes dudas? Revisa nuestra sección de preguntas frecuentes o escríbenos directamente. Nuestro equipo está listo para ayudarte."
    inputs={[
      {
        type: 'text',
        name: 'name',
        label: 'Nombre completo',
        placeholder: 'Juan Pérez',
      },
      {
        type: 'email',
        name: 'email',
        label: 'Email',
        placeholder: 'tu@email.com',
      },
    ]}
    textarea={{
      label: 'Mensaje',
      placeholder: 'Cuéntanos sobre tu proyecto, idea o consulta...',
      rows: 4,
    }}
    disclaimer={{
      label:
        'Al enviar este formulario, aceptas que recopilemos tu información de contacto para responder tu consulta.',
    }}
    description="Nuestro equipo responde en menos de 24 horas hábiles."
  />

  <!-- Features2 Widget ************** -->

  <Features2
    title="Estamos para ayudarte"
    subtitle="Múltiples formas de contactarnos"
    items={[
      {
        title: 'Consultas Generales',
        description: `¿Preguntas sobre nuestros servicios, metodología de trabajo o pricing? Escríbenos y te orientamos.`,
        icon: 'tabler:help',
      },
      {
        title: 'Hablar con Ventas',
        description:
          'Interesado en un proyecto o producto? Conversemos sobre cómo podemos ayudarte a alcanzar tus objetivos.',
        icon: 'tabler:briefcase',
      },
      {
        title: 'Soporte Técnico',
        description:
          'Si ya eres cliente y necesitas ayuda con alguno de nuestros productos, estamos para asistirte.',
        icon: 'tabler:tool',
      },
      {
        title: 'Teléfono / WhatsApp',
        description: '+54 9 291 527-8982',
        icon: 'tabler:phone',
      },
      {
        title: 'Email',
        description: 'martin.navarro.dev@gmail.com',
        icon: 'tabler:mail',
      },
      {
        title: 'Ubicación',
        description: 'Bahía Blanca, Buenos Aires, Argentina',
        icon: 'tabler:map-pin',
      },
    ]}
  />
</Layout>
