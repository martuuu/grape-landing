---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import Features2 from '~/components/widgets/Features2.astro';
import Content from '~/components/widgets/Content.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps from '~/components/widgets/Steps.astro';
import CallToAction from '~/components/widgets/CallToAction.astro';
import { getPermalink } from '~/utils/permalinks';

const metadata = {
  title: 'Quiénes Somos - Grape',
  description: 'Conocé al equipo de Grape: desarrolladores apasionados creando soluciones digitales innovadoras.',
};
---

<Layout metadata={metadata}>
  <!-- Hero Section -->
  <Hero
    tagline="Nuestro Equipo"
    title="Somos Grape"
    subtitle="Un equipo multidisciplinario de desarrolladores, diseñadores y especialistas en tecnología, unidos por la pasión de crear soluciones digitales que transformen negocios."
    image={{
      src: 'https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Equipo Grape',
    }}
  />

  <!-- Estadísticas -->
  <Stats
    title="Números que nos representan"
    stats={[
      { title: 'Años de Experiencia', amount: '8+' },
      { title: 'Proyectos Entregados', amount: '150+' },
      { title: 'Clientes Satisfechos', amount: '80+' },
      { title: 'Líneas de Código', amount: '2M+' },
    ]}
  />

  <!-- Nuestra Historia -->
  <Content
    isReversed
    title="Nuestra Historia"
    subtitle="De un café a una agencia digital"
    items={[
      {
        title: 'Fundación (2016)',
        description: 'Todo comenzó con tres amigos desarrolladores que compartían la visión de hacer desarrollo web accesible y de calidad.',
        icon: 'tabler:rocket',
      },
      {
        title: 'Primeros Clientes',
        description: 'Nuestros primeros proyectos fueron para startups y pequeños negocios locales que confiaron en nosotros.',
        icon: 'tabler:users',
      },
      {
        title: 'Expansión del Equipo',
        description: 'El boca a boca nos permitió crecer: sumamos diseñadores, QA testers y especialistas en DevOps.',
        icon: 'tabler:trending-up',
      },
      {
        title: 'Hoy',
        description: 'Somos un equipo de 12 profesionales trabajando con empresas de toda Latinoamérica.',
        icon: 'tabler:award',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1553877522-43269d4ea984?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Historia de Grape',
    }}
  />

  <!-- Valores -->
  <Features2
    title="Nuestros Valores"
    subtitle="Los principios que guían cada decisión que tomamos"
    columns={3}
    items={[
      {
        title: 'Transparencia',
        description: 'Comunicación clara y honesta en cada etapa del proyecto. Sin sorpresas, sin letra chica.',
        icon: 'tabler:eye',
      },
      {
        title: 'Calidad',
        description: 'No entregamos código que nosotros mismos no usaríamos. Testing exhaustivo y code reviews constantes.',
        icon: 'tabler:certificate',
      },
      {
        title: 'Innovación',
        description: 'Nos mantenemos actualizados con las últimas tecnologías para ofrecer las mejores soluciones.',
        icon: 'tabler:bulb',
      },
      {
        title: 'Colaboración',
        description: 'Trabajamos codo a codo con nuestros clientes. Tu éxito es nuestro éxito.',
        icon: 'tabler:users-group',
      },
      {
        title: 'Agilidad',
        description: 'Metodologías ágiles que nos permiten adaptarnos rápido a cambios y entregar valor constantemente.',
        icon: 'tabler:refresh',
      },
      {
        title: 'Compromiso',
        description: 'Cumplimos plazos, respondemos rápido y estamos disponibles cuando nos necesitas.',
        icon: 'tabler:heart-handshake',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-light dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- El Equipo -->
  <Features2
    title="Conocé al Equipo"
    subtitle="Los profesionales detrás de Grape"
    items={[
      {
        title: 'Desarrolladores Full Stack',
        description: 'Expertos en frontend y backend, manejan proyectos completos de principio a fin.',
        icon: 'tabler:code',
      },
      {
        title: 'Diseñadores UX/UI',
        description: 'Especializados en crear experiencias de usuario intuitivas y visualmente atractivas.',
        icon: 'tabler:palette',
      },
      {
        title: 'Arquitectos de Software',
        description: 'Diseñan sistemas escalables y robustos que crecen con tu negocio.',
        icon: 'tabler:building',
      },
      {
        title: 'QA Engineers',
        description: 'Garantizan la calidad mediante testing manual y automatizado exhaustivo.',
        icon: 'tabler:test-pipe',
      },
      {
        title: 'DevOps Engineers',
        description: 'Expertos en infraestructura cloud, CI/CD y deployment automatizado.',
        icon: 'tabler:server',
      },
      {
        title: 'Project Managers',
        description: 'Coordinan equipos, tiempos y recursos para entregas exitosas.',
        icon: 'tabler:calendar-check',
      },
    ]}
  />

  <!-- Cómo Trabajamos -->
  <Steps
    id="metodologia"
    title="Nuestra Metodología de Trabajo"
    tagline="Proceso optimizado"
    items={[
      {
        title: 'Escuchamos',
        description: 'Entendemos tu negocio, tus objetivos y tus usuarios antes de escribir una sola línea de código.',
        icon: 'tabler:ear',
      },
      {
        title: 'Planificamos',
        description: 'Creamos roadmaps detallados con hitos claros y estimaciones realistas.',
        icon: 'tabler:map',
      },
      {
        title: 'Diseñamos',
        description: 'Prototipamos y validamos interfaces antes del desarrollo para asegurar usabilidad.',
        icon: 'tabler:brush',
      },
      {
        title: 'Desarrollamos',
        description: 'Código limpio, documentado y siguiendo las mejores prácticas de la industria.',
        icon: 'tabler:code',
      },
      {
        title: 'Testeamos',
        description: 'Testing exhaustivo en múltiples dispositivos y navegadores antes de cada release.',
        icon: 'tabler:checkbox',
      },
      {
        title: 'Acompañamos',
        description: 'Soporte post-lanzamiento, capacitación y evolución continua del producto.',
        icon: 'tabler:lifebuoy',
      },
    ]}
  />

  <!-- Tecnologías que dominamos -->
  <Content
    title="Stack Tecnológico"
    subtitle="Herramientas y tecnologías con las que trabajamos"
    items={[
      {
        title: 'Frontend Moderno',
        description: 'React, Vue, Next.js, Astro, Tailwind CSS, TypeScript',
        icon: 'tabler:brand-react',
      },
      {
        title: 'Backend Escalable',
        description: 'Node.js, Python, .NET, PostgreSQL, MongoDB, Redis',
        icon: 'tabler:server',
      },
      {
        title: 'Mobile Cross-Platform',
        description: 'React Native, Flutter para apps iOS y Android',
        icon: 'tabler:device-mobile',
      },
      {
        title: 'Cloud & DevOps',
        description: 'AWS, Google Cloud, Docker, Kubernetes, CI/CD',
        icon: 'tabler:cloud',
      },
      {
        title: 'CMS & E-commerce',
        description: 'WordPress, Shopify, Strapi, Contentful',
        icon: 'tabler:shopping-cart',
      },
      {
        title: 'IA & Automatización',
        description: 'OpenAI API, Automation Workflows, ML Models',
        icon: 'tabler:robot',
      },
    ]}
    image={{
      src: 'https://images.unsplash.com/photo-1498050108023-c5249f4df085?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2072&q=80',
      alt: 'Tecnologías Grape',
    }}
  />

  <!-- Por qué elegirnos -->
  <Features2
    title="¿Por Qué Elegir Grape?"
    subtitle="Lo que nos diferencia de otras agencias"
    columns={2}
    items={[
      {
        title: 'Equipo Senior',
        description: 'Todos nuestros desarrolladores tienen mínimo 5 años de experiencia en proyectos reales.',
        icon: 'tabler:users',
      },
      {
        title: 'Sin Intermediarios',
        description: 'Trabajas directamente con los desarrolladores, no con comerciales o intermediarios.',
        icon: 'tabler:phone',
      },
      {
        title: 'Código Propietario',
        description: 'El código es 100% tuyo, sin dependencias ocultas ni licencias restrictivas.',
        icon: 'tabler:code',
      },
      {
        title: 'Relación Precio-Calidad',
        description: 'Calidad de agencia grande, con la flexibilidad y precio de un equipo boutique.',
        icon: 'tabler:cash',
      },
      {
        title: 'Soporte Continuo',
        description: 'No desaparecemos después del lanzamiento. Estamos para mantener y evolucionar tu producto.',
        icon: 'tabler:headset',
      },
      {
        title: 'Trabajo Remoto Eficiente',
        description: '100% remote-first desde 2020. Herramientas de colaboración que funcionan.',
        icon: 'tabler:home',
      },
    ]}
  >
    <Fragment slot="bg">
      <div class="absolute inset-0 bg-bg-light dark:bg-transparent"></div>
    </Fragment>
  </Features2>

  <!-- Call to Action -->
  <CallToAction
    title="¿Querés conocer más sobre nosotros?"
    subtitle="Charlemos sobre tu proyecto y cómo podemos ayudarte a hacerlo realidad."
    actions={[
      {
        variant: 'primary',
        text: 'Contactanos',
        href: getPermalink('/contact'),
        icon: 'tabler:message',
      },
      {
        variant: 'secondary',
        text: 'Ver Trabajos',
        href: getPermalink('/trabajos'),
      },
    ]}
  />
</Layout>
